{
  "name": "base-twitter-adaptor",
  "version": "1.0.2",
  "description": "A type-safe Twitter API adapter with built-in LLM support for building AI-powered Twitter bots",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:tweet": "ts-node src/testTweet.ts"
  },
  "keywords": [
    "twitter",
    "x",
    "bot",
    "llm",
    "ai",
    "adapter",
    "typescript"
  ],
  "author": "Dennison Bertram",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dennisonbertram/base-twitter-adaptor.git"
  },
  "bugs": {
    "url": "https://github.com/dennisonbertram/base-twitter-adaptor/issues"
  },
  "homepage": "https://github.com/dennisonbertram/base-twitter-adaptor#readme",
  "dependencies": {
    "express": "^4.21.2",
    "twitter-api-v2": "^1.15.1",
    "winston": "^3.17.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "dotenv": "^16.3.1",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "twitter-api-v2": "^1.15.1"
  }
}
